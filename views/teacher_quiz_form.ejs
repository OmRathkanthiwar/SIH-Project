<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= quiz ? t.editQuiz : t.createQuiz %> - <%= t.eduventure %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-layout">
        <%- include('partials/sidebar') %>
        <main class="main-content">
            <h1 class="text-3xl font-bold mb-6 text-blue-400"><%= quiz ? t.editQuiz : t.createQuiz %></h1>
            <div class="card p-6">
                <form action="<%= action %>" method="POST">
                    <!-- Quiz Details -->
                    <div class="mb-4">
                        <label for="title" class="block text-sm font-medium text-gray-300"><%= t.title %></label>
                        <input type="text" name="title" id="title" value="<%= quiz?.title || '' %>" required class="input-field mt-1">
                    </div>
                    <div class="mb-6">
                        <label for="subject" class="block text-sm font-medium text-gray-300"><%= t.subject %></label>
                        <input type="text" name="subject" id="subject" value="<%= quiz?.subject || '' %>" required class="input-field mt-1">
                    </div>
                    <hr class="border-gray-700 my-6">
                    <!-- Questions Container -->
                    <h2 class="text-2xl font-semibold mb-4"><%= t.questions %></h2>
                    <div id="questions-container" class="space-y-6">
                        <% if (quiz && quiz.questions.length > 0) { %>
                            <% quiz.questions.forEach((q, index) => { %>
                                <div class="question-block p-4 border border-gray-700 rounded-lg">
                                    <label class="block text-sm font-medium text-gray-300"><%= t.question %> <%= index + 1 %></label>
                                    <input type="text" name="questions[<%= index %>][question]" value="<%= q.question %>" required class="input-field mt-1 mb-2">
                                    <!-- Options -->
                                    <div class="grid grid-cols-2 gap-2 mb-2">
                                        <% q.options.forEach((opt, i) => { %>
                                            <input type="text" name="questions[<%= index %>][options][<%= i %>]" value="<%= opt %>" required class="input-field">
                                        <% }) %>
                                    </div>
                                    <!-- Correct Answer -->
                                    <label class="block text-sm font-medium text-gray-300"><%= t.correctAnswerLabel %></label>
                                    <input type="number" name="questions[<%= index %>][answer]" value="<%= q.answer %>" min="0" max="3" required class="input-field mt-1 w-1/4">
                                </div>
                            <% }) %>
                        <% } %>
                    </div>

                    <!-- Actions -->
                    <div class="flex items-center gap-4 mt-6">
                        <button type="button" id="add-question-btn" class="btn-primary"><%= t.addQuestion %></button>
                        <button type="submit" class="btn-primary bg-green-600 hover:bg-green-700"><%= submitText %></button>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <!-- This script block safely passes server data to the client-side script -->
    <script id="translations-data" type="application/json">
        <%- JSON.stringify(t) %>
    </script>

    <script>
        document.getElementById('add-question-btn').addEventListener('click', () => {
            // Read the clean JSON data
            const t = JSON.parse(document.getElementById('translations-data').textContent);
            
            const container = document.getElementById('questions-container');
            const questionIndex = container.children.length;
            
            // This is now pure JavaScript, which your editor will understand
            const questionBlock = `
                <div class="question-block p-4 border border-gray-700 rounded-lg">
                    <label class="block text-sm font-medium text-gray-300">${t.question} ${questionIndex + 1}</label>
                    <input type="text" name="questions[${questionIndex}][question]" placeholder="${t.questionTextPlaceholder}" required class="input-field mt-1 mb-2">
                    <div class="grid grid-cols-2 gap-2 mb-2">
                        <input type="text" name="questions[${questionIndex}][options][0]" placeholder="${t.option1Placeholder}" required class="input-field">
                        <input type="text" name="questions[${questionIndex}][options][1]" placeholder="${t.option2Placeholder}" required class="input-field">
                        <input type="text" name="questions[${questionIndex}][options][2]" placeholder="${t.option3Placeholder}" required class="input-field">
                        <input type="text" name="questions[${questionIndex}][options][3]" placeholder="${t.option4Placeholder}" required class="input-field">
                    </div>
                    <label class="block text-sm font-medium text-gray-300">${t.correctAnswerLabelJS}</label>
                    <input type="number" name="questions[${questionIndex}][answer]" min="0" max="3" required class="input-field mt-1 w-1/4">
                </div>`;
            container.insertAdjacentHTML('beforeend', questionBlock);
        });
    </script>
</body>
</html>

