<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Quizzes - Eduventure</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-layout">
        <%- include('partials/sidebar') %>
        <main class="main-content">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-blue-400">Manage Quizzes</h1>
                <a href="/teacher/quiz/new" class="btn-primary">Create New Quiz</a>
            </div>

            <div class="card p-6">
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead>
                            <tr class="border-b border-gray-700">
                                <th class="p-3">Title</th>
                                <th class="p-3">Subject</th>
                                <th class="p-3 text-center">Questions</th>
                                <th class="p-3 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% quizzes.forEach(quiz => { %>
                                <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                                    <td class="p-3"><%= quiz.title %></td>
                                    <td class="p-3"><%= quiz.subject %></td>
                                    <td class="p-3 text-center"><%= quiz.questions.length %></td>
                                    <td class="p-3 text-right">
                                        <a href="/teacher/quiz/<%= quiz.id %>/edit" class="text-blue-400 hover:underline mr-4">Edit</a>
                                        <form action="/teacher/quiz/<%= quiz.id %>/delete" method="POST" class="inline-block" onsubmit="return confirm('Are you sure you want to delete this quiz?');">
                                            <button type="submit" class="text-red-400 hover:underline">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</body>
</html>

