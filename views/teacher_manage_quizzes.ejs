<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t.manageQuizzes %> - <%= t.eduventure %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-layout">
        <%- include('partials/sidebar') %>
        <main class="main-content">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-blue-400"><%= t.manageQuizzes %></h1>
                <!-- This is the corrected link -->
                <a href="/teacher/quiz/new" class="btn-primary"><%= t.addNewQuiz %></a>
            </div>

            <div class="card p-0">
                <table class="w-full text-left">
                    <thead class="border-b-2 border-gray-700">
                        <tr>
                            <th class="p-3"><%= t.title %></th>
                            <th class="p-3"><%= t.subject %></th>
                            <th class="p-3 text-center"><%= t.questions %></th>
                            <th class="p-3 text-right"><%= t.actions %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% quizzes.forEach(quiz => { %>
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                                <td class="p-3"><%= quiz.title %></td>
                                <td class="p-3"><%= quiz.subject %></td>
                                <td class="p-3 text-center"><%= quiz.questions.length %></td>
                                <td class="p-3 text-right">
                                    <a href="/teacher/quiz/edit/<%= quiz.id %>" class="text-blue-400 hover:underline mr-4"><%= t.edit %></a>
                                    <form action="/teacher/quiz/delete/<%= quiz.id %>" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this quiz?');">
                                        <button type="submit" class="text-red-400 hover:underline"><%= t.delete %></button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>

