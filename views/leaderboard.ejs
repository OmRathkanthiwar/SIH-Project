<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t.leaderboard %> - <%= t.eduventure %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/leaderboard.css">
</head>
<body>
    <div class="app-layout">
        <%- include('partials/sidebar') %>
        <main class="main-content">
            <div class="leaderboard-card">
                <h1 class="text-3xl font-bold mb-6 text-blue-400"><%= t.leaderboard %></h1>
                <table class="w-full text-left">
                    <thead>
                        <tr class="border-b-2 border-gray-700">
                            <th class="p-3">Rank</th>
                            <th class="p-3"><%= t.student %></th>
                            <th class="p-3"><%= t.grade %></th>
                            <th class="p-3"><%= t.score %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (students && students.length > 0) { %>
                            <% students.forEach((student, index) => { %>
                                <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                                    <td class="p-3 rank"><%= index + 1 %></td>
                                    <td class="p-3"><%= student.details.name %></td>
                                    <td class="p-3"><%= student.details.grade %></td>
                                    <td class="p-3"><%= student.details.adventurePoints %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center p-6 text-gray-500">The leaderboard is currently empty.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>

