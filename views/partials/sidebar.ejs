<div class="sidebar">
    <h2 class="text-2xl font-bold text-center mb-8 text-blue-400"><%= t.eduventure %></h2>

    <div class="sidebar-nav">
        <% if(user.role === 'student'){ %>
            <a href="/student" class="<%= currentPath === '/student' ? 'active' : '' %>"><%= t.dashboard %></a>
            <a href="/quizzes" class="<%= currentPath.startsWith('/quiz') ? 'active' : '' %>"><%= t.quizzes %></a>
            <a href="/leaderboard" class="<%= currentPath === '/leaderboard' ? 'active' : '' %>"><%= t.leaderboard %></a>
            <a href="/ask-ai" class="<%= currentPath === '/ask-ai' ? 'active' : '' %>"><%= t.aiTutor %></a>
            <a href="/games" class="<%= currentPath.startsWith('/games') ? 'active' : '' %>"><%= t.games %></a>
            <a href="/profile" class="<%= currentPath === '/profile' ? 'active' : '' %>"><%= t.myProfile %></a>
        <% } %>

        <% if(user.role === 'teacher'){ %>
            <a href="/teacher" class="<%= currentPath === '/teacher' ? 'active' : '' %>"><%= t.dashboard %></a>
            <a href="/teacher/students" class="<%= currentPath === '/teacher/students' ? 'active' : '' %>"><%= t.manageStudents %></a>
            <a href="/teacher/quizzes" class="<%= currentPath.startsWith('/teacher/quiz') ? 'active' : '' %>"><%= t.manageQuizzes %></a>
        <% } %>
    </div>

    <div class="sidebar-footer">
        <a href="/toggle-lang" class="lang-toggle">
            <% if (currentLang === 'en') { %>
                <%= t.changeToOdia %>
            <% } else { %>
                Switch to English
            <% } %>
        </a>
        <a href="/logout" class="logout-btn"><%= t.logout %></a>
    </div>
</div>

