<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t.quizzes %> - <%= t.eduventure %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-layout">
        <%- include('partials/sidebar') %>
        <main class="main-content">
            <h1 class="text-3xl font-bold mb-6 text-blue-400">ðŸ“š <%= t.availableQuizzes %></h1>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% quizzes.forEach((quiz) => { %>
                    <div class="card p-6 flex flex-col justify-between">
                        <div>
                            <h2 class="text-xl font-semibold"><%= quiz.title %></h2>
                            <p class="text-gray-400"><%= t.subject %>: <%= quiz.subject %></p>
                        </div>
                        <a href="/quiz/<%= quiz.id %>" class="btn-primary mt-4 text-center"><%= t.takeQuiz %></a>
                    </div>
                <% }) %>
            </div>
        </main>
    </div>
</body>
</html>

